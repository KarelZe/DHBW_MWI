<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" type="javafx.scene.control.ListCell" xmlns="http://javafx.com/javafx/8.0.172-ea">
    <graphic>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label fx:id="lblName" text="Bezeichnung:" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label fx:id="lblKurs" text="Aktienkurs:" />
            <TextField fx:id="txtKurs" promptText="Kurs" />
        </HBox>
    </graphic>
</fx:root>
