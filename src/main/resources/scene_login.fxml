    </Button>
    <Button mnemonicParsing="false" onAction="#doSpielAnlegen" prefHeight="25.0" prefWidth="612.0" text="Temp Neues Spiel anlegen" textFill="RED">
        <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </VBox.margin>
    </Button>
    <TextField fx:id="txtBenutzername" promptText="Benutzername">
        <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </VBox.margin>
    </TextField>
    <PasswordField fx:id="txtPasswort" promptText="Passwort">
        <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </VBox.margin>
    </PasswordField>
    <Button defaultButton="true" mnemonicParsing="false" onAction="#doLogin" prefHeight="25.0" prefWidth="612.0" text="Einloggen">
        <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
