<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="vboxUnternehmen" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.dhbw.karlsruhe.controller.WertpapierAnlegenController">
   <Text fx:id="headers" strokeType="OUTSIDE" strokeWidth="0.0" text="Werpapiere anlegen">
      <font>
         <Font name="System Bold" size="20.0" />
      </font>
      <VBox.margin>
         <Insets bottom="10.0" left="90.0" top="20.0" />
      </VBox.margin>
   </Text>
    <Button onAction="#doHinzufuegenAktie" text="+ Neue Aktie anlegen">
      <VBox.margin>
         <Insets bottom="10.0" left="90.0" />
      </VBox.margin></Button>
    <Label fx:id="lblAktie" text="Aktie:">
        <VBox.margin>
            <Insets bottom="5.0" left="90.0" right="5.0" top="5.0" />
        </VBox.margin>
      <font>
         <Font size="17.0" />
      </font>
    </Label>
    <ListView fx:id="lstVwAktie" prefWidth="500" style="-fx-control-inner-background-alt: -fx-control-inner-background">
      <VBox.margin>
         <Insets bottom="10.0" left="90.0" right="90.0" />
      </VBox.margin></ListView>
    <Button onAction="#doHinzufuegenAnleihe" text="+ Neue Anleihe anlegen">
      <VBox.margin>
         <Insets bottom="10.0" left="90.0" top="10.0" />
      </VBox.margin>
      <tooltip>
         <Tooltip text="Empty Tooltip" />
      </tooltip></Button>
    <Label fx:id="lblAnleihe" text="Anleihe:">
        <VBox.margin>
            <Insets bottom="5.0" left="90.0" right="5.0" top="5.0" />
        </VBox.margin>
      <font>
         <Font size="17.0" />
      </font>
    </Label>
    <ListView fx:id="lstVwAnleihe" prefWidth="500" style="-fx-control-inner-background-alt: -fx-control-inner-background">
      <VBox.margin>
         <Insets left="90.0" right="90.0" />
      </VBox.margin></ListView>
    <Button fx:id="btnSpeichern" alignment="CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#doSpeichern" prefHeight="43.0" prefWidth="131.0" text="Speichern">
      <VBox.margin>
         <Insets bottom="10.0" left="90.0" top="10.0" />
      </VBox.margin></Button>
</VBox>
