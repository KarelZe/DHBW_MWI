<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="de.dhbw.karlsruhe.controller.TeilnehmerHistorieController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
    <RowConstraints />
  </rowConstraints>
  <TableView fx:id="tvHistorie" editable="true" prefHeight="200.0" prefWidth="200.0">
    <columnResizePolicy>
      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
    </columnResizePolicy>
    <columns>
      <TableColumn prefWidth="75.0" text="BuchungsId" fx:id="tblColBuchungId">
        <cellValueFactory>
          <PropertyValueFactory property="Id" />
        </cellValueFactory>
      </TableColumn>
      <TableColumn prefWidth="75.0" text="kaufen / verkaufen" fx:id="tblColBuySell">
        <cellValueFactory>
          <PropertyValueFactory property="kaufart" />
        </cellValueFactory>
      </TableColumn>
      <TableColumn prefWidth="75.0" text="Volumen" fx:id="tblColVolume">
        <cellValueFactory>
          <PropertyValueFactory property="volume" />
        </cellValueFactory>
      </TableColumn>
      <TableColumn prefWidth="75.0" text="Art" fx:id="tblColType">
        <cellValueFactory>
          <PropertyValueFactory property="wertpapierart" />
        </cellValueFactory>
      </TableColumn>
      <TableColumn prefWidth="75.0" text="Unternehmen" fx:id="tblColUnternehmen">
        <cellValueFactory>
          <PropertyValueFactory property="unternehmen" />
        </cellValueFactory>
      </TableColumn>
    </columns>
  </TableView>
</GridPane>
