<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="500.0" minHeight="-Infinity"
      minWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
      fx:controller="de.dhbw.karlsruhe.controller.PeriodeAnlegenController">
  <GridPane hgap="10.0" vgap="10.0">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES"/>
        <ColumnConstraints hgrow="SOMETIMES"/>
    </columnConstraints>
    <Label prefHeight="21.0" prefWidth="312.0" text="Kapitalmarktzins" GridPane.columnIndex="0" GridPane.rowIndex="1">
      <GridPane.margin>
        <Insets bottom="5.0" top="20.0" />
      </GridPane.margin>
    </Label>
      <TextField fx:id="txtKapitalmarktzins" prefWidth="311.0" GridPane.columnIndex="1"
                 GridPane.rowIndex="1">
      <GridPane.margin>
        <Insets bottom="5.0" />
      </GridPane.margin>
      <tooltip>
          <Tooltip text="Kapitalmarktzins in Prozent"/>
      </tooltip>
    </TextField>
    <Label text="Ordergebühr" GridPane.columnIndex="0" GridPane.rowIndex="2">
      <GridPane.margin>
        <Insets top="5.0" />
      </GridPane.margin>
    </Label>
      <TextField fx:id="txtOrdergebuehr" prefWidth="311.0" GridPane.columnIndex="1"
                 GridPane.rowIndex="2">
      <GridPane.margin>
        <Insets top="5.0" />
      </GridPane.margin>
      <tooltip>
          <Tooltip text="Ordergebühr in Prozent"/>
      </tooltip>
    </TextField>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <rowConstraints>
      <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints/>
    </rowConstraints>
    <VBox.margin>
        <Insets left="90.0" right="90.0" top="240.0"/>
    </VBox.margin>
  </GridPane>
    <Button fx:id="btnAnlegen" defaultButton="true" mnemonicParsing="false" onAction="#doPeriodeAnlegen"
            prefHeight="50.0" prefWidth="225.0" text="Periode anlegen">
    <VBox.margin>
      <Insets left="90.0" right="90.0" />
    </VBox.margin>
    <tooltip>
        <Tooltip text="Periode anlegen"/>
    </tooltip>
  </Button>
  <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
  </padding>
</VBox>
