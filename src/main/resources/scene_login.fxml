<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.dhbw.karlsruhe.controller.LoginController">
    <ImageView fx:id="logo" fitHeight="150.0" fitWidth="232.0" pickOnBounds="true" preserveRatio="true">
