<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.dhbw.karlsruhe.controller.SpielAnlegenController">
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Neues Spiel anlegen">
      <font>
         <Font name="System Bold" size="20.0" />
      </font>
      <VBox.margin>
         <Insets bottom="10.0" left="90.0" top="200.0" />
      </VBox.margin>
   </Text>
    <TextField fx:id="txtStartkapital" promptText="Startkapital">
        <VBox.margin>
            <Insets bottom="5.0" left="90.0" right="90.0" top="5.0" />
        </VBox.margin>
    </TextField>
    <Button defaultButton="true" mnemonicParsing="false" onAction="#doSpielAnlegen" prefHeight="44.0" prefWidth="612.0" text="Spiel anlegen">
        <VBox.margin>
            <Insets bottom="5.0" left="90.0" right="90.0" top="20.0" />
        </VBox.margin>
    </Button>
</VBox>
