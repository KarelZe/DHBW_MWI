<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<HBox xmlns:fx="http://javafx.com/fxml/1" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
      fx:controller="de.dhbw.karlsruhe.controller.UnternehmenCell">
    <children>
        <TextField id="txtUnternehmensname" promptText="Unternehmensname"/>
        <ColorPicker fx:id="clrFarbe"/>
        <Button id="btnHinzufuegen" mnemonicParsing="false" onAction="#doHinzufuegen" text="+"/>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</HBox>
